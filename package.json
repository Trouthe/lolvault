{
  "name": "lolvault-monorepo",
  "version": "1.0.0",
  "description": "LoL Vault Monorepo - Electron App, Web App, and Firebase Backend",
  "private": true,
  "workspaces": [
    "apps/electron",
    "apps/web",
    "backend/functions"
  ],
  "scripts": {
    "start:electron": "npm run start --workspace=apps/electron",
    "start:electron:dev": "npm run electron-dev --workspace=apps/electron",
    "start:electron:prod": "npm run build-electron --workspace=apps/electron",
    "build:electron": "npm run build --workspace=apps/electron",
    "dist:electron": "npm run dist --workspace=apps/electron",
    "dist:electron:win": "npm run dist:win --workspace=apps/electron",
    "dist:electron:portable": "npm run dist:portable --workspace=apps/electron",
    "test:electron": "npm run test --workspace=apps/electron",
    "lint:electron": "npm run lint --workspace=apps/electron",
    
    "start:web": "npm run start --workspace=apps/web",
    "start:web:dev": "npm run start --workspace=apps/web",
    "start:web:prod": "npm run build:prod --workspace=apps/web && npx serve apps/web/dist/lolvault-web/browser",
    "build:web": "npm run build --workspace=apps/web",
    "build:web:prod": "npm run build:prod --workspace=apps/web",
    "test:web": "npm run test --workspace=apps/web",
    "lint:web": "npm run lint --workspace=apps/web",
    
    "build:functions": "npm run build --workspace=backend/functions",
    "deploy:functions": "cd backend && firebase deploy --only functions",
    "serve:functions": "npm run serve --workspace=backend/functions",
    "emulators": "cd backend && firebase emulators:start",
    
    "install:all": "npm install && npm install --workspace=apps/electron && npm install --workspace=apps/web && npm install --workspace=backend/functions",
    "clean": "rimraf apps/electron/node_modules apps/web/node_modules backend/functions/node_modules node_modules"
  },
  "devDependencies": {
    "rimraf": "^6.0.0"
  }
}
